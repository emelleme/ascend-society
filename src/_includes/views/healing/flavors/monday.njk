<section class="flavors-section">
  <div class="container">
    <h2>Monday</h2>
    <div class="flavors-list">
    {% for card in mondayData %}
      <div class="flavors-item">
        <img src={{card.imageSrc}} alt="Samuel Adams">
        <h3>{{card.title}}</h3>
        <p class="flavors-price">{{card.price}}</p>
      </div>
      {% endfor %}
    </div>
  </div>
</section>
